<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/noti_cardview"
        android:layout_width="340dp"
        android:layout_height="350dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/noti_ring_img"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ringing"
                android:layout_margin="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Notification"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="@+id/noti_ring_img"
                app:layout_constraintBottom_toBottomOf="@+id/noti_ring_img"
                app:layout_constraintLeft_toRightOf="@+id/noti_ring_img"/>
            <TextView
                android:id="@+id/noti_message_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"
                android:textSize="20sp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                app:layout_constraintTop_toBottomOf="@+id/noti_ring_img"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <EditText
                android:id="@+id/noti_message_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.80"
                android:textSize="17sp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/noti_message_tv"/>
            <RadioGroup
                android:id="@+id/noti_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/noti_message_et"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <RadioButton
                    android:id="@+id/noti_radio_bt1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="16sp"
                    android:text="5분 후"/>
                <RadioButton
                    android:id="@+id/noti_radio_bt2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:text="10분 후"/>
                <RadioButton
                    android:id="@+id/noti_radio_bt3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:text="15분 후"/>
            </RadioGroup>
            <Button
                android:id="@+id/noti_cancel_btn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="CANCEL"
                android:textSize="17sp"
                android:textColor="@color/font_color"
                android:background="#00ff0000"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/noti_save_btn"/>
            <Button
                android:id="@+id/noti_save_btn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:textSize="17sp"
                android:textColor="@color/font_color"
                android:background="#00ff0000"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="20dp"
                app:layout_constraintLeft_toRightOf="@+id/noti_cancel_btn"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>