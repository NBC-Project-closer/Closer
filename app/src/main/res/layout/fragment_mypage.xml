<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F7FF">

    <ScrollView
        android:id="@+id/mypage_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="400dp">

                <androidx.cardview.widget.CardView
                    android:layout_margin="20dp"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    app:cardCornerRadius="150dp"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/mypage_picture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dummy_img_karina"/>
                    
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/mypage_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:gravity="center"
                    android:text="유지민"
                    android:textColor="#242251"
                    android:textSize="30dp"
                    android:textStyle="bold" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:textColor="#242251"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/mypage_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="010-1234-5678"
                android:textColor="#242251"
                android:textSize="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#BBBBDC"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일 주소"
                android:textColor="#242251"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/mypage_email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="katarinabluu@kwangya.net"
                android:textColor="#242251"
                android:textSize="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="20dp"
                android:background="#BBBBDC" />

            <TextView
                android:id="@+id/mypage_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이벤트"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#242251"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15분 이후 알림"
                android:textSize="20dp"
                android:textColor="#242251" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#BBBBDC"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/mypage_tv_more1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추가 사항"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mypage_tv_more2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="있으면 넣을 것"
                android:textSize="20dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
